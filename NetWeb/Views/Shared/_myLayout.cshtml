<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-color:aliceblue">
    <!--Render a partial view.-->
    @{
        Html.RenderPartial("_LeftSide");
        Html.RenderPartial("_TopView");
    }



    <!-- Header -->
    <header>
        <h1 style="text-align:center; color:bisque">LMS Statistics</h1>
    </header>
    <!-- End of Header -->
    <!-- Left Sidebar -->
    @*<nav>
        <h3>Navigation</h3>
        @Html.ActionLink("About", "About");<br />
        @Html.ActionLink("Contact", "Contact");<br />
        @Html.ActionLink("Enquiry", "Enquiry");<br />
        @Html.ActionLink("Home", "Home");<br />
        @Html.ActionLink("Purchase", "Purchase");<br />
    </nav>*@
    <!-- End of Left Sidebar -->
    <!-- Content Body -->
    <div class="content">
        @RenderBody()
    </div>
    <!-- End of Content Body -->
    <!-- Footer -->
    <footer>
        <h4>Date is @DateTime.Now.ToShortDateString()</h4>
    </footer>

    <!-- Style -->
    <style>
        header {
            height: 100%;
            width: 100%;
            background-color: red;
        }

        nav {
            float: left;
            width: 300px;
            height: 650px;
            background-color: darkgoldenrod;
        }

        .content {
            background-color: blueviolet;
            height: 610px;
            padding: 20px;
        }

        footer {
            background-color: green;
            width: 100%;
            height: 50px;
            float: right;
            text-align: center;
        }
    </style>
</body>
</html>